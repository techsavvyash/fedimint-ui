{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "packages/eslint-config/*.js",
    "packages/eslint-config/*.json",
    "packages/tsconfig/*.json"
  ],
  "pipeline": {
    "build": {
      "outputs": ["build/**", "dist/**"],
      "dependsOn": ["^build"]
    },
    "guardian-ui#build": {
      "outputs": ["build/**", "dist/**"],
      "dependsOn": ["^build"],
      "env": ["REACT_APP_FM_CONFIG_API", "REACT_APP_TOS"]
    },
    "gateway-ui#build": {
      "outputs": ["build/**", "dist/**"],
      "dependsOn": ["^build"],
      "env": ["REACT_APP_FM_GATEWAY_API", "REACT_APP_FM_GATEWAY_PASSWORD"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "@fedimint/types#dev": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "@fedimint/utils#dev": {
      "cache": false,
      "dependsOn": ["@fedimint/types#build"]
    },
    "@fedimint/ui#dev": {
      "cache": false,
      "dependsOn": ["@fedimint/types#build", "@fedimint/utils#build"]
    },
    "@fedimint/guardian-ui#dev": {
      "cache": false,
      "dependsOn": [
        "@fedimint/types#build",
        "@fedimint/utils#build",
        "@fedimint/ui#build"
      ],
      "env": ["REACT_APP_FM_CONFIG_PATH"]
    },
    "@fedimint/gateway-ui#dev": {
      "cache": false,
      "dependsOn": [
        "@fedimint/types#build",
        "@fedimint/utils#build",
        "@fedimint/ui#build"
      ]
    },
    "clean": {
      "cache": false
    }
  }
}
